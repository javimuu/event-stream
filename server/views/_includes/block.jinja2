{% extends "layout.jinja2" %}

{% block title %} {{title}} {% endblock %}

{% block content %}
<div class="timeline">
  <h2>{{year}}</h2>
  <ul class="timeline-items">
  {% for event in events %}
    <li class="is-hidden timeline-item {{event.position}}">
      <h3>{{event.title}}</h3>
      <hr>
      <p>{{event.content}}</p>
      <hr>
      <time>{{event.created_at}}</time>
    </li>
    {% endfor %}
  </ul>
</div>
{% endblock %}
